{{> content_top }}

<div class="history-page-container">
    <div class="cyber-atmosphere">
        <!-- Cyberpunk background elements for history pages -->
        <div class="legacy-data-streams"></div>
        <div class="archive-grid"></div>
        <div class="temporal-particles"></div>
    </div>
    
    <div class="content-wrapper">
        {{#with page.head}}
        <header class="history-header">
            <h1 class="historical-title">{{title}}</h1>
            {{#if description}}
            <p class="historical-description">{{description}}</p>
            {{/if}}
            {{#if extra.date}}
            <p class="historical-meta">Era: {{extra.date}}{{#if extra.period}} ‚Ä¢ Period: {{extra.period}}{{/if}}</p>
            {{/if}}
            
            {{#if extra.key_innovations}}
            <div class="innovation-badges">
                <h4>Key Innovations:</h4>
                <div class="badge-container">
                    {{#each extra.key_innovations}}
                    <span class="innovation-badge">{{this}}</span>
                    {{/each}}
                </div>
            </div>
            {{/if}}
            
            {{#if extra.major_manufacturers}}
            <div class="manufacturer-list">
                <h4>Major Manufacturers:</h4>
                <div class="manufacturer-badges">
                    {{#each extra.major_manufacturers}}
                    <span class="manufacturer-badge">{{this}}</span>
                    {{/each}}
                </div>
            </div>
            {{/if}}
        </header>
        {{/with}}
        
        <nav class="era-navigation">
            <a href="/history" class="nav-link overview">üìú Historical Overview</a>
            <a href="/history/early-period" class="nav-link mechanical">üîß Mechanical Era</a>
            <a href="/history/electromechanical" class="nav-link electrical">‚ö° Electromechanical Era</a>
            <a href="/history/animatronics" class="nav-link animatronic">ü§ñ Animatronic Era</a>
        </nav>
        
        <article class="historical-content">
            {{{page.body}}}
        </article>
        
        <footer class="historical-footer">
            <div class="back-to-zeldar">
                <a href="/" class="zeldar-return">‚Üê Return to Zeldar's Chamber</a>
            </div>
            <div class="historical-authenticity">
                <small>‚öôÔ∏è All technical specifications verified through historical automaton research and documentation.</small>
            </div>
        </footer>
    </div>
</div>

<style>
.history-page-container {
    position: relative;
    min-height: 100vh;
    background: linear-gradient(135deg, #2C1810 0%, #1a1a2e 50%, #0f3460 100%);
    color: #DEB887;
    font-family: 'Georgia', serif;
    overflow-x: hidden;
}

.mystical-atmosphere {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
}

.floating-gears::before,
.floating-gears::after {
    content: '‚öôÔ∏è';
    position: absolute;
    font-size: 1.5rem;
    opacity: 0.08;
    animation: historicalFloat 25s linear infinite;
}

.floating-gears::before {
    top: 15%;
    left: 5%;
    animation-delay: -8s;
}

.floating-gears::after {
    top: 70%;
    right: 8%;
    animation-delay: -18s;
}

.timeline-particles::before,
.timeline-particles::after {
    content: 'üîß';
    position: absolute;
    font-size: 1rem;
    opacity: 0.05;
    animation: historicalFloat 30s linear infinite reverse;
}

.timeline-particles::before {
    top: 40%;
    left: 15%;
    animation-delay: -12s;
}

.timeline-particles::after {
    top: 80%;
    right: 20%;
    animation-delay: -22s;
}

@keyframes historicalFloat {
    0% { transform: translateY(0px) rotate(0deg); opacity: 0.05; }
    25% { opacity: 0.1; }
    50% { transform: translateY(-30px) rotate(180deg); opacity: 0.05; }
    75% { opacity: 0.08; }
    100% { transform: translateY(0px) rotate(360deg); opacity: 0.05; }
}

.historical-mist {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
        radial-gradient(circle at 25% 75%, rgba(139, 69, 19, 0.08) 0%, transparent 50%),
        radial-gradient(circle at 75% 25%, rgba(160, 82, 45, 0.05) 0%, transparent 50%);
    animation: historicalMist 35s ease-in-out infinite;
}

@keyframes historicalMist {
    0%, 100% { opacity: 0.2; }
    50% { opacity: 0.05; }
}

